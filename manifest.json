{
  "manifest_version": 3,
  "name": "Link Verifier",
  "version": "2.0",
  "description": "Verify all links on a webpage, ignoring phone and email links",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png",
    "512": "icon.png"
  }
}
